{
    "name": "catmarkdowneditor",
    "version": "1.0.0",
    "description": "Um editor de Markdown simples, bonito e incorporável em JavaScript, fácil de usar. Os recursos incluem salvamento automático e verificação ortográfica.",
    "files": [
        "dist/**/*",
        "src/**/*",
        "types/catmarkdowneditor.d.ts"
    ],
    "keywords": [
        "embeddable",
        "markdown",
        "editor",
        "javascript",
        "fontawesome"
    ],
    "main": "src/js/catmarkdowneditor.js",
    "types": "types/catmarkdowneditor.d.ts",
    "license": "GPL-3.0-or-later",
    "author": "Luiz Carlos Marin / Ivete Gielow Marin / Caroline Gielow Marin",
    "dependencies": {
        "codemirror": "^5.65.16",
        "codemirror-spell-checker": "^1.1.2",
        "marked": "^4.3.0"
    },
    "devDependencies": {
        "browserify": "^17.0.0",
        "cypress": "^12.17.4",
        "eslint": "^8.57.0",
        "eslint-plugin-cypress": "^2.15.1",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-eslint": "^6.0.0",
        "gulp-header": "^2.0.9",
        "gulp-rename": "^2.0.0",
        "gulp-terser": "^2.1.0",
        "typescript": "^5.3.3",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "repository": "github:luizcmarin/CatMarkDownEditor",
    "scripts": {
        "prepare": "gulp",
        "test": "npm run lint && npm run test:types && npm run e2e",
        "lint": "gulp lint",
        "cypress:lint": "eslint cypress",
        "cypress:run": "cypress run",
        "e2e": "gulp && npm run cypress:lint && npm run cypress:run",
        "test:types": "tsc --project types/tsconfig.json"
    }
}
