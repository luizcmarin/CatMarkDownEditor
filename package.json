{
    "name": "catmarkdowneditor",
    "version": "2.0.0",
    "description": "Um editor de Markdown simples, bonito e incorporável em JavaScript, fácil de usar. Os recursos incluem salvamento automático e verificação ortográfica.",
    "files": [
        "dist/**/*",
        "src/**/*",
        "types/catmarkdowneditor.d.ts"
    ],
    "keywords": [
        "embeddable",
        "markdown",
        "editor",
        "javascript"
    ],
    "main": "src/js/catmarkdowneditor.js",
    "types": "types/catmarkdowneditor.d.ts",
    "license": "GPL-3.0-or-later",
    "author": "Luiz Carlos Marin / Ivete Gielow Marin / Caroline Gielow Marin",
    "dependencies": {
        "@codemirror/commands": "^6.10.0",
        "@codemirror/lang-markdown": "^6.5.0",
        "@codemirror/language-data": "^6.5.2",
        "@codemirror/state": "^6.5.2",
        "@codemirror/view": "^6.38.8",
        "@lezer/highlight": "^1.2.3",
        "marked": "^17.0.1",
        "marked-highlight": "^2.2.3"
    },
    "devDependencies": {
        "cypress": "^15.7.1",
        "eslint": "^9.39.1",
        "eslint-plugin-cypress": "^5.2.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.6"
    },
    "repository": "github:luizcmarin/CatMarkDownEditor",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "npm run lint && npm run test:types && npm run e2e",
        "lint": "eslint src/js/**/*.js",
        "cypress:lint": "eslint cypress",
        "cypress:run": "cypress run",
        "e2e": "npm run build && npm run cypress:lint && npm run cypress:run",
        "test:types": "tsc --project types/tsconfig.json"
    }
}
